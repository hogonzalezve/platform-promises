apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ .spec.appName }}
  namespace: {{ .spec.namespace }}
spec:
  parentRefs:
    - name: {{ .spec.gateway.gatewayName }}
      namespace: {{ .spec.gateway.gatewayNamespace }}
  {{- if .spec.gateway.hostname }}
  hostnames:
    - {{ .spec.gateway.hostname }}
  {{- end }}
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: {{ .spec.appName }}
          port: 80
